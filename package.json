{
  "name": "o3de",
	"displayName": "o3de",
	"description": "O3DE developer support for Visual Studio Code (alpha, limited functionality and support)",
	"repository": "github:jeremyong/o3de-extension",
	"publisher": "JeremyOng",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:jsonc",
		"onLanguage:hlsl"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "jsonc",
				"extensions": [ ".pass", ".shader", ".shadervariantlist" ]
			},
			{
				"id": "hlsl",
				"extensions": [
					".azsl",
					".azsli",
					".srgi"
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
